pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'myapp'
        DOCKER_TAG = "${env.BUILD_ID}"
        KUBE_NAMESPACE = 'default'
        APP_NAME = 'myapp'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", './app')
                }
            }
        }

        stage('Test') {
            steps {
                dir('./app') {
                    sh 'npm test'
                }
            }
        }

        stage('Security Scan') {
            steps {
                sh "trivy image --exit-code 0 --severity HIGH,CRITICAL ${DOCKER_IMAGE}:${DOCKER_TAG}"
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}", 'docker-hub-credentials') {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                    kubectl set image deployment/${APP_NAME} ${APP_NAME}=${DOCKER_REGISTRY}/${DOCKER_IMAGE}:${DOCKER_TAG} -n ${KUBE_NAMESPACE}
                    kubectl rollout status deployment/${APP_NAME} -n ${KUBE_NAMESPACE}
                """
            }
        }
    }

    post {
        success {
            echo 'Despliegue completado con éxito.'
        }
        failure {
            echo 'Falló el despliegue. Realizando rollback...'
            sh "kubectl rollout undo deployment/${APP_NAME} -n ${KUBE_NAMESPACE}"
        }
    }
}
